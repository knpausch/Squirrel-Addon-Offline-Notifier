[
    {
        "type": "Accordion",
        "properties": {
            "name": "General",
            "collapsed": false
        },
        "children": [
            {
                "type": "Dropdown",
                "properties": {
                    "labelName": "Style",
                    "options": [
                        {
                            "option": "default",
                            "text": "Default"
                        },
                        {
                            "option": "day",
                            "text": "Day"
                        },
                        {
                            "option": "night",
                            "text": "Night"
                        },
                        {
                            "option": "custom",
                            "text": "Custom"
                        }
                    ],
                    "bindingPropertyName": "themeType"
                }
            },
            {
                "type": "ConditionalBlock",
                "properties": {
                    "bindingPropertyName": "themeType",
                    "equals": "custom"
                },
                "children": [
                    {
                        "type": "ColorOpacityInput",
                        "properties": {
                            "labelName": "Font Color",
                            "bindingPropertyName": "textColor",
                            "allowCheckbox": false,
                            "hasOpacity": true
                        }
                    },
                    {
                        "type": "ColorOpacityInput",
                        "properties": {
                            "labelName": "Online Color",
                            "bindingPropertyName": "serverUpColor",
                            "allowCheckbox": false,
                            "hasOpacity": true
                        }
                    },
                    {
                        "type": "ColorOpacityInput",
                        "properties": {
                            "labelName": "Offline Color",
                            "bindingPropertyName": "serverDownColor",
                            "allowCheckbox": false,
                            "hasOpacity": true
                        }
                    },
                    {
                        "type": "InputBox",
                        "properties": {
                            "labelName": "Border Radius",
                            "shortPropertyName": "px",
                            "disabled": false,
                            "type": "Integer",
                            "min": 0,
                            "max": 100,
                            "step": 1,
                            "allowBinding": true,
                            "allowCounter": true,
                            "allowManualEntry": true,
                            "spellcheck": false,
                            "placeholder": "",
                            "textArea": false,
                            "textAreaRows": 1,
                            "liveUpdate": true,
                            "bindingPropertyName": "borderRadius"
                        }
                    }
                ]
            }
        ]
    }
]