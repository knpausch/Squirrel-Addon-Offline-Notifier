[
    {
        "type": "Accordion",
        "properties": {
            "name": "General",
            "collapsed": false
        },
        "children": [
            {
                "type": "Dropdown",
                "properties": {
                    "labelName": "Style",
                    "options": [
                        {
                            "option": "default",
                            "text": "Default"
                        },
                        {
                            "option": "day",
                            "text": "Day"
                        },
                        {
                            "option": "night",
                            "text": "Night"
                        },
                        {
                            "option": "compact",
                            "text": "Compact"
                        },
                        {
                            "option": "custom",
                            "text": "Custom"
                        }
                    ],
                    "bindingPropertyName": "themeType"
                }
            },
            {
                "type": "ConditionalBlock",
                "properties": {
                    "bindingPropertyName": "themeType",
                    "equals": "custom"
                },
                "children": [
                    {
                        "type": "ColorOpacityInput",
                        "properties": {
                            "labelName": "Server Online Color",
                            "bindingPropertyName": "serverUpColor",
                            "allowCheckbox": false,
                            "hasOpacity": true
                        }
                    },
                    {
                        "type": "ColorOpacityInput",
                        "properties": {
                            "labelName": "Server Offline Color",
                            "bindingPropertyName": "serverDownColor",
                            "allowCheckbox": false,
                            "hasOpacity": true
                        }
                    }
                ]
            }
        ]
    }
]